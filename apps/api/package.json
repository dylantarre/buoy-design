{
  "name": "@buoy-design/api",
  "version": "0.1.0",
  "description": "Buoy Cloud API - Cloudflare Workers backend",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc --noEmit",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "db:create": "wrangler d1 create buoy_platform",
    "db:migrate": "wrangler d1 migrations apply buoy_platform",
    "db:migrate:local": "wrangler d1 migrations apply buoy_platform --local",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "hono": "^4.6.0",
    "nanoid": "^5.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "drizzle-kit": "^0.24.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8",
    "wrangler": "^4.54.0"
  }
}
