{
  "name": "buoy",
  "version": "0.2.25",
  "private": true,
  "description": "Catch design drift before it ships",
  "keywords": [
    "design-system",
    "drift-detection",
    "design-drift",
    "component-library",
    "ai-code-quality"
  ],
  "license": "MIT",
  "author": "Buoy",
  "homepage": "https://github.com/ahoybuoy/buoy#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahoybuoy/buoy.git"
  },
  "bugs": {
    "url": "https://github.com/ahoybuoy/buoy/issues"
  },
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vitest": "^2.1.0"
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=20.0.0"
  }
}
