{
  "name": "@ahoybuoy/figma-widget",
  "version": "0.1.0",
  "private": true,
  "description": "Figma widget and plugin for Buoy design system health monitoring",
  "scripts": {
    "build": "pnpm build:all",
    "build:all": "pnpm build:widget && pnpm build:plugin",
    "build:widget": "esbuild src/widget.tsx --bundle --outfile=dist/widget.js --target=es6 --jsx=transform --jsx-factory=figma.widget.h --jsx-fragment=figma.widget.Fragment",
    "build:plugin": "pnpm build:plugin-code && pnpm build:plugin-ui",
    "build:plugin-code": "esbuild src/plugin.ts --bundle --outfile=dist/plugin.js --target=es6",
    "build:plugin-ui": "esbuild src/ui.tsx --bundle --outfile=dist/ui.js --target=es2020 --loader:.tsx=tsx && pnpm build:html",
    "build:html": "node scripts/build-html.js",
    "use:plugin": "cp manifest.plugin.json manifest.json",
    "use:widget": "cp manifest.widget.json manifest.json",
    "watch:widget": "esbuild src/widget.tsx --bundle --outfile=dist/widget.js --target=es6 --jsx=transform --jsx-factory=figma.widget.h --jsx-fragment=figma.widget.Fragment --watch",
    "watch:plugin": "concurrently \"esbuild src/plugin.ts --bundle --outfile=dist/plugin.js --target=es6 --watch\" \"esbuild src/ui.tsx --bundle --outfile=dist/ui.js --target=es2020 --loader:.tsx=tsx --watch\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.98.0",
    "@figma/widget-typings": "^1.12.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.19.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  }
}
