{
  "name": "@buoy-design/core",
  "version": "0.1.9",
  "description": "Core domain models and analysis for Buoy design drift detection",
  "type": "module",
  "license": "MIT",
  "author": "Buoy <hello@buoy.design>",
  "homepage": "https://buoy.design",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buoy-design/buoy.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/buoy-design/buoy/issues"
  },
  "keywords": [
    "buoy",
    "design-system",
    "drift-detection",
    "design-tokens"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/index.js",
