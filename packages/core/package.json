{
  "name": "@buoy-design/core",
  "version": "0.1.1",
  "description": "Core domain models and analysis for Buoy design drift detection",
  "type": "module",
  "license": "MIT",
  "author": "Buoy <hello@buoy.design>",
  "homepage": "https://buoy.design",
  "repository": {
    "type": "git",
